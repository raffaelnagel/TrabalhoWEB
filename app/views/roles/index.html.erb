<h1>Listing Roles</h1>
 
<table>
 <tr>
    <th>Name</th>
    
  </tr>
<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>  
    <td><%= link_to 'Show', role_path(role) %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role_path(role),method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br><%= link_to 'Back', roles_path %>